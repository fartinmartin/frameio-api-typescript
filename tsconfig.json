{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    //properties are not initialized in abstract classes 
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": [
    "src/index.ts",
  ],
  "exclude": []
}
